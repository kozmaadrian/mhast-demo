{
  "$id": "blocks/cards.icons.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cards Block (Icons Variant)",
  "description": "A collection of cards where each card is represented by an icon and a link.",
  "type": "array",
  "x-aem-selector": "div",
  "items": {
    "type": "object",
    "properties": {
      "picture": {
        "$ref": "primitives/picture.schema.json",
        "x-aem-selector": "div:first-child > picture"
      },
      "link": {
        "$ref": "primitives/link.schema.json",
        "x-aem-selector": "div:last-child > a"
      }
    },
    "required": [
      "picture",
      "link"
    ]
  }
}