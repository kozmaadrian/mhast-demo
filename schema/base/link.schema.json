{
  "$id": "primitives/link.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Link",
  "description": "Primitive schema for HTML anchor elements",
  "type": "object",
  "x-aem-selector": "a",
  "properties": {
    "link": {
      "type": "object",
      "properties": {
        "href": {
          "$ref": "primitives/text.schema.json",
          "x-aem-attribute": "href"
        },
        "title": {
          "type": "string",
          "description": "Link title attribute",
          "x-aem-attribute": "title"
        }
      },
      "required": [
        "href",
        "title"
      ]
    }
  },
  "required": [
    "link"
  ]
}